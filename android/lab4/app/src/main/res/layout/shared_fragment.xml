<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/shared_welcome_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:text="Imagination is more important than knowledge."
        android:textColor="#000000"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/shared_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/shared_welcome_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:src="@drawable/image1" />

    <TextView
        android:id="@+id/shared_info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shared_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:fontFamily="sans-serif-light"
        android:text="Albert Einstein"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>
